#!/bin/bash
# kurbeScript - Start a Kubernetes cluster and verify setup

# Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube not found. Please install it first."
    exit 1
fi

# Check if kubectl is installed
if ! command -v kubectl &> /dev/null
then
    echo "âŒ kubectl not found. Please install it first."
    exit 1
fi

# Start minikube
echo "ğŸš€ Starting Minikube cluster..."
minikube start

# Verify cluster info
echo "ğŸ” Checking cluster status..."
kubectl cluster-info

# List all pods
echo "ğŸ“¦ Listing all pods..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes setup and verification complete."
